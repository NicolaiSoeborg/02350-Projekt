                            </StackPanel>

                            <Button x:Name="AddButton" Grid.Column="1" Margin="2">
                                <TextBlock x:Name="textBlock" FontFamily="Segoe MDL2 Assets" HorizontalAlignment="Center" VerticalAlignment="Center">&#57609;</TextBlock>
                            </Button>
                            <Button Grid.Column="2" Margin="{Binding Margin, ElementName=AddButton}" >
                                <TextBlock FontFamily="Segoe MDL2 Assets" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{Binding Margin, ElementName=textBlock}">&#57608;</TextBlock>
                            </Button>
                            <Button Grid.Column="3" Margin="{Binding Margin, ElementName=AddButton}" Background="Red">
                                <TextBlock FontFamily="Segoe MDL2 Assets" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White">&#57606;</TextBlock>
                            </Button>

                        </Grid>


                    </StackPanel>
                </ScrollViewer>-->

                <!--<Grid Grid.Row="1" Name="ShoppingCartButtons" HorizontalAlignment="Stretch" Margin="20" VerticalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="30*"/>
                        <ColumnDefinition Width="70*"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" Margin="5" Background="Red" >
                        <StackPanel Orientation="Horizontal">
                            <Label FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" Foreground="White">&#59213;</Label>
                        </StackPanel>
                    </Button>

                    <Button x:Name="CheckOutButton" Grid.Column="1" Margin="5"  Background="Green" >
                        <StackPanel Orientation="Horizontal">

<UserControl x:Class="OLProgram.View.UserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ViewModel="clr-namespace:OLProgram.ViewModel"
        xmlns:View="clr-namespace:OLProgram.View"
        mc:Ignorable="d"
        Height="600" Width="800">
    
    <UserControl.DataContext>
        <ViewModel:UserViewModel/> 
    </UserControl.DataContext>
    
    <Grid Name="UserWindowFrame" Height="600" Margin="0" VerticalAlignment="Top" Background="WhiteSmoke" ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="85*"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Name="TitleLabel" Content="Hej Peter Petersen" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="32" />
        <Grid Grid.Row="1" HorizontalAlignment="Stretch" Margin="0" VerticalAlignment="Stretch" ShowGridLines="True">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="65*"/>
                <ColumnDefinition Width="35*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0" Name="ProductButtons"  HorizontalAlignment="Stretch" Margin="20" VerticalAlignment="Stretch" ShowGridLines="True">
                <Grid.RowDefinitions>
                    <RowDefinition Height="80*"/>
                    <RowDefinition Height="20*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Name="Products" HorizontalAlignment="Stretch" Margin="20" VerticalAlignment="Stretch" Background="White" ShowGridLines="True">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="30*"/>
                        <ColumnDefinition Width="30*"/>
                        <ColumnDefinition Width="30*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="20*"/>
                        <RowDefinition Height="20*"/>
                        <RowDefinition Height="20*"/>
                        <RowDefinition Height="20*"/>

                    </Grid.RowDefinitions>
                    <Button Grid.Row="0" Grid.Column="0" x:Name="button1" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" Background="Azure">
                        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="70*"/>
                                <RowDefinition Height="30*"/>
                            </Grid.RowDefinitions>
                            <Image Grid.Row="0" Source="/Images/tuborg.png" x:Name="image1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                            <Label Grid.Row="1" Content="Tuborg" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="12"/>
                        </Grid>
                    </Button>
                    <Button Grid.Row="0" Grid.Column="1" x:Name="button2" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" Background="Azure">
                        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="70*"/>
                                <RowDefinition Height="30*"/>
                            </Grid.RowDefinitions>
                            <Image Grid.Row="0" Source="/Images/guldtuborg.png" x:Name="image2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                            <Label Grid.Row="1" Content="Guld Tuborg" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="12"/>
                        </Grid>
                    </Button>
                </Grid>

                <Grid Grid.Row="1" Name="UndoRedo" HorizontalAlignment="Stretch" Margin="20" VerticalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="20*" />
                        <ColumnDefinition Width="20*" />
                        <ColumnDefinition Width="60*" />
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" Margin="5">
                        <StackPanel Orientation="Horizontal">
                            <Label Content="Undo"/>
                            <Label FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center">&#57614;</Label>
                        </StackPanel>
                    </Button>

                    <Button Grid.Column="1" Margin="5">
                        <StackPanel Orientation="Horizontal">
                            <Label Content="Redo"/>
                            <Label FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center">&#59302;</Label>
                        </StackPanel>
                    </Button>
                </Grid>
            </Grid>

            <Grid Grid.Column="1" Name="ShoppingCart" HorizontalAlignment="Stretch" Margin="20" VerticalAlignment="Stretch">
                <Grid.RowDefinitions>
                    <RowDefinition Height="80*"/>
                    <RowDefinition Height="20*"/>
                </Grid.RowDefinitions>


                <Grid Grid.Row="0" Grid.Column="1" x:Name="BasketItems" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" Background="Azure" >
                    <ItemsControl ItemsSource="{Binding basket.BasketItems}"/>
                </Grid>
                
                <Grid Grid.Row="1" Grid.Column="1" x:Name="BasketButtons" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" Background="Azure">
                    <Button Content="Add" HorizontalAlignment="Left" Command="{Binding AddProductToBasketCommand}"/>
                    <Button Content="Undo" HorizontalAlignment="Right" Command="{Binding UndoCommand}"/>
                </Grid>
            
                <!--<ScrollViewer Grid.Row="0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="auto">
                    <StackPanel>

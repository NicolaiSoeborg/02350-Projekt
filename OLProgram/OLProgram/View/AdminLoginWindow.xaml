<Window x:Class="OLProgram.View.AdminLoginWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OLProgram.View"
             Height="100" Width="300" Title="Admin Login"
             WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow">
    <DockPanel LastChildFill="True" FocusManager.FocusedElement="{Binding ElementName=TxtBox}">
        <TextBlock DockPanel.Dock="Top" Text="Admin Password:" />
        <TextBox Name="TxtBox" DockPanel.Dock="Top" Text="{Binding TxtPassword}" />
        <Button Content="Login" IsDefault="true" Click="AdminLogin_Click" />
    </DockPanel>
</Window>
